.text
.global main


main:

push  {r4,r5,r6,r7,r8,lr}
ldr   r4, .args
ldr   r5, .args+4
sub   r6, sp, #4 //указатель на массив
sub   sp, sp, #4
mov   r7, #5//размер буффера
mov   r8, #0//сколько символов прочли
mov   r3, #0


.Loopbegin:
ldr   r0, [r4]
bl    fgetc
cmp   r0, #0
ble   .LoopEnd
add   r8, r8, #1 //прочли на 1 символ больше
//если больше либо равно буфер -1 увеличиваем буфер
str   r0, [r6, r3]
add   r3, r3, #4
cmp   r7, r8 //cmp буфер вс сколько прочли
blle   .Realloc
b     .Loopbegin

.Realloc:
mov   r0, r6
mov   r1, r7
bl    realloc
mov   r7, r1
bx lr

.LoopEnd:
cmp r3, #0
bhi .while
b   .End
.while:
add   r3
ldr   r1, [r5]
bl    fputc
sub   r3, r3, #4
b     .LoopEnd

.End:
add sp, sp, #4
pop {r4,r5,r6,r7,r8,lr}
bx lr

.args:
.word stdin
.word stdout

